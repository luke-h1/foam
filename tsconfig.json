{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noImplicitAny": true,
    "target": "es2015",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./apps/mobile/src/*"],
    },
  },
  "exclude": ["node_modules"],
}
